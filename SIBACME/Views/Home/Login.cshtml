@model User
@{
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css" />
</head>
<body class="container">
    <div class="row">
        <div style="padding-top: 150px" class="col-md-offset-3 col-md-6 ">
            <h3 class="text-center bg-success">LOGIN</h3>
            <form asp-action="CheckSign" asp-controller="Home">
                <div class="col-md-offset-4">
                    <img src="~/images/login.jpg" style="width: 200px" />
                </div>
                <div class="form-group form-group-lg">
                    <label class="control-label"><b>Username</b></label>
                    <input class="form-control" asp-for="UserName" type="text" placeholder="Enter Username" required>
                </div>
                <div class="form-group form-group-lg">
                    <label class="control-label" for="psw"><b>Password</b></label>
                    <input class="form-control" asp-for="Password" type="password" placeholder="Enter Password" required>
                </div>
                <div class="form-group form-group-lg">
                    <div class="col-md-2">
                        <button class="btn btn-success" type="submit">LOGIN</button>
                    </div>
                    <div class="col-md-2">
                        <button type="button" class="btn btn-danger">CANCEL</button>
                    </div>

                </div>
                <div class="col-md-4">
                    <label>
                        <input type="checkbox" checked="checked" name="remember"> Remember me
                    </label>
                </div>
              
            </form>
        </div>
    </div>

</body>
